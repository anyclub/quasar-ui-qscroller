$item-height = 26px
$selected-font-size = 18px
$font-size = 14px
$header-font-size = 22px
$header-height = 50px
$footer-height = 50px
$footer-font-size = 14px

$item-height-dense = 20px
$selected-font-size-dense = 14px
$font-size-dense = 11px
$header-font-size-dense = 17px
$header-height-dense = 40px
$footer-height-dense = 40px
$footer-font-size-dense = 11px

.no-scrollbars
  -ms-overflow-style none
  scrollbar-width none
  &::-webkit-scrollbar
    display none

.q-scroller
  position relative

  overflow hidden
  transition all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
  &--border
    border 1px solid var(--scroller-border-color, #ccc)
  &__header
    position relative
    z-index 1
    height $header-height
    // padding 4px
    padding 0
    margin 0
    font-weight 700
    font-size $header-font-size
  &__header--dense
    position relative
    z-index 1
    height $header-height-dense
    // padding 2px
    padding 0
    margin 0
    font-weight 700
    font-size $header-font-size-dense
  &__footer
    position relative
    z-index 1
    height $footer-height
    // padding 4px
    padding 0
    margin 0
    font-weight 700
    font-size $footer-font-size
  &__footer--dense
    position relative
    z-index 1
    height $footer-height-dense
    // padding 2px
    padding 0
    margin 0
    font-weight 700
    font-size $footer-font-size-dense
  &__padding
    padding 0
    margin 0
    width 100%
  &__body
    overflow-y hidden
  &__horizontal-bar
    position relative
    // regular
    &:before
      content ""
      top calc(50% - 13px)
      position absolute
      margin 0 auto
      height $item-height
      width 90%
      left 0
      right 0
      box-sizing border-box
      text-align left
      border-top 1px solid var(--scroller-bar-color, #ccc)
      border-bottom 1px solid var(--scroller-bar-color, #ccc)
  &__horizontal-bar--dense
    position relative
    // dense
    &:before
      content ""
      top calc(50% - 10px)
      position absolute
      margin 0 auto
      height $item-height-dense
      width 90%
      left 0
      right 0
      box-sizing border-box
      text-align left
      border-top 1px solid var(--scroller-bar-color, #ccc)
      border-bottom 1px solid var(--scroller-bar-color, #ccc)
  &__vertical-bar
    border-right 1px solid var(--scroller-bar-color, #ccc)
  &__cancel-btn
    font-size inherit
  &__padding
    padding 0
    margin 0
    width 100%
    pointer-events none
  &__item
    height $item-height
    min-height $item-height
    max-height $item-height
    padding 0
    margin 0
    width 100%
    opacity 0.8
    // font-weight 600
    font-size $font-size
    line-height $font-size
    &--selected
      background-color transparent
      border-radius 4px
      opacity 1
      font-weight 800 !important
      font-size $selected-font-size !important
      line-height $selected-font-size !important
    &--disabled
      pointer-events none
      opacity 0.3
      font-weight 300
    &--selected--dense
      background-color transparent
      border-radius 4px
      opacity 1
      font-weight 800 !important
      font-size $selected-font-size-dense !important
      line-height $selected-font-size-dense !important
    &--disabled--dense
      pointer-events none
      opacity 0.2
      font-weight 300
  &__item--dense
    height $item-height-dense
    min-height $item-height-dense
    max-height $item-height-dense
    padding 0
    margin 0
    width 100%
    opacity 0.8
    //font-weight 600
    font-size $font-size-dense
    line-height $font-size-dense
